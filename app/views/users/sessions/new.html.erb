<div class="container pt-4 pb-4">
  <div class="row justify-content-center">
    <div class="form-wrapper col-6">
      <h2>ログイン</h2>
      <%= render "shared/error_message", obj: @user %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group mb-3">
          <%= f.label :email, class:"form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
        <div class="field form-group mb-3">
          <%= f.label :password, class:"form-label" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary w-100 mb-3" %>
        </div>
      <% end %>
      <%= link_to "新しいアカウントを作成", new_user_registration_path, class:"btn btn-secondary w-100" %>
    </div>
  </div>
</div>
