<div class="container pt-4 pb-4">
  <div class="row justify-content-center">
    <div class="form-wrapper col-md-7">
      <h3>新規登録</h3>
      <%= render "shared/error_message", obj: @room %>
      <%= form_with model: @room do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :name, "施設名", class:"form-label col-form-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_field :name, placeholder: "ルーム名を入力", class:"form-control" %>
          </div>
        </div>
        <div class="form-group mb-3 row align-items-center">
          <%= f.label :detail, "施設詳細", class:"form-label col-form-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_area :detail, placeholder: "施設詳細を入力" ,rows:5, class:"form-control" %>
          </div>
        </div>
        <div class="form-group mb-3 row">
          <%= f.label :fee, "料金", class:"form-label col-form-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.number_field :fee, placeholder: "一日あたりの料金を入力" , class:"form-control" %>
          </div>
        </div>
        <div class="form-group mb-3 row">
          <%= f.label :address, "住所", class:"form-label col-form-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_field :address, placeholder: "住所を入力" , class:"form-control" %>
          </div>
        </div>
        <div class="form-group mb-3 row">
          <%= f.label :avatar, "施設画像", class:"form-label col-form-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.file_field :avatar, class:"form-control" %>
          </div>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "保存", class:"btn btn-primary" %>
          <%= link_to "キャンセル", root_path, class:"btn btn-secondary" %>
        </div>
        <%= f.hidden_field :user_id, value: @user.id %>
      <% end %>
    </div>
  </div>
</div>
