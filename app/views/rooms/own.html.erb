<div class="container pt-4 pb-4">
  <h3>登録済み一覧</h3>
  <table class="table own-room-table">
    <thead>
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr class="align-items-center">
          <td>
            <% if room.avatar.attached? %>
              <%= image_tag room.avatar, class:"own-room-img" %>
            <% else %>
              <%= image_tag "default-room.png", class:"own-room-img" %>
            <% end %>
          </td>
          <td><%= link_to room.name, room_path(room.id) %></td>
          <td><%= room.detail %></td>
          <td>¥<%= room.fee.to_s(:delimited) %>~</td>
          <td><%= room.created_at.to_s(:date_jp) %></td>
          <td>
            <button id="btnOpenMenu" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="border: none; background: none;">
              <i class="fa-solid fa-ellipsis-vertical"></i>
            </button>
            <ul class="dropdown-menu" aria-labelledby="btnOpenMenu">
              <li><%= link_to "編集", edit_room_path(room.id), class:"dropdown-item" %></li>
              <li><%= link_to "施設を削除", room_path(room.id), method: :delete, class:"dropdown-item text-danger" %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
