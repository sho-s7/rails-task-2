<div class="container">
  <div class="top-search-form row justify-content-center">
    <div class="col-6">
      <%= form_with(url: rooms_path, method: :get, local: true) do %>
        <div class="form-group mb-2">
          <%= text_field_tag :address, params[:address], placeholder:"エリア名を入力", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= submit_tag "検索", class:"btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
